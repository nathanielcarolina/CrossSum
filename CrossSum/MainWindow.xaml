<Window x:Class="CrossSum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrossSum"
        mc:Ignorable="d"
        Title="Cross Sum" Height="250" Width="300">
    <Grid Margin="20">
        <TextBlock Text="Calculate Cross Sum" FontSize="15" TextWrapping="Wrap"/>
        <StackPanel Margin="0,41,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="Enter Number:" TextWrapping="Wrap"/>
            <TextBox Name="Tbx_Input" Text="" Margin="3,0,6,0" Width="120" KeyDown="Tbx_Input_KeyDown" TextChanged="Tbx_Input_TextChanged"/>
            <Button Name="Btn_Go" Width="31" Content="OK" Click="Btn_Go_Click"/>
        </StackPanel>
        <TextBlock Name="Tblk_Output" Text="" TextWrapping="Wrap" Margin="0,66,0,0"/>

    </Grid>
</Window>
